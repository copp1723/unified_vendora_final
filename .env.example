# VENDORA Platform Environment Variables

# FastAPI Configuration
ENVIRONMENT=development
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info
RELOAD_APP=False

# Google Cloud Configuration
BIGQUERY_PROJECT=vendora-analytics
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Firebase Configuration
FIREBASE_PROJECT_ID=vendora-analytics
FIREBASE_SERVICE_ACCOUNT_PATH=path/to/firebase-service-account.json

# Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Mailgun Configuration (Optional)
MAILGUN_PRIVATE_API_KEY=your-mailgun-private-key
MAILGUN_DOMAIN=your-mailgun-domain
MAILGUN_SENDING_API_KEY=your-mailgun-sending-key

# Other Services (Optional)
OPENROUTER_API_KEY=your-openrouter-api-key
SUPERMEMORY_API_KEY=your-supermemory-api-key

# Storage Paths
DATA_STORAGE_PATH=./data
MEMORY_STORAGE_PATH=./memory

# Quality Settings
QUALITY_THRESHOLD=0.85